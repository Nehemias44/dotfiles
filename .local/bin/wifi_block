#!/bin/bash

INTERFACE=$(ip link | grep -o 'wl[a-z0-9]*' | head -n 1)
STATE=$(iw $INTERFACE link)

COLOR=$(xrdb -get color10)
COLOR="^c$COLOR^"
RESET="^d^"
ICON="ï€’  "

if [[ $STATE != "Not connected." ]] 
then
    STATE=$(iw $INTERFACE link | awk '/SSID/ { print $2 }')
else
    STATE="Disconnected"
fi

echo $COLOR$ICON$STATE$RESET

