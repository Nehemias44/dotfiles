#!/bin/sh

NB=$(xrdb -get background)
NF=$(xrdb -get foreground)
SB=$(xrdb -get color12)

COLORS="-nb $NB -nf $NF -sb $SB -sf $NB"

NEWTHEME=$(/bin/ls $HOME/.config/Xresources-themes | dmenu -i -c -l 10 -fn "Iosevka Nerd Font=pixelsize=14" -p "theme" $COLORS | awk '{print $1}')

if [ $NEWTHEME != "" ]
then
    echo '#!/bin/sh' > $HOME/.theme && echo export "THEME_SELECT=$HOME/.config/Xresources-themes/$NEWTHEME" >> $HOME/.theme
    echo 'ln -sf $THEME_SELECT /tmp/Theme' >> $HOME/.theme
    . $HOME/.theme
    xrdb -merge $HOME/.Xresources
    pidof st | xargs kill -s USR1
    dwmc reloadxres
else
    exit 1
fi

exit 0
